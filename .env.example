# WebSocket URL principal (QuickNode, Alchemy, etc.)
WS_URL=wss://your-node-provider.base-mainnet.example.com/your-api-key

HTTP_RPC_URL=https://mainnet.base.org
HTTP_RPC_URL_2=https://your-node-provider.base-mainnet.example.com/your-api-key
HTTP_RPC_URL_3=https://base-rpc.publicnode.com

# PnL — saldo inicial (capturado automaticamente na ativação; só definir se precisar forçar)
INITIAL_LP_USD=
INITIAL_HL_USD=

# Hedge config
HEDGE_TOKEN=token0
HEDGE_SYMBOL=VIRTUAL-PERP

# Strategy
HEDGE_FLOOR=0.90
MIN_NOTIONAL_USD=10
MAX_NOTIONAL_USD=100000
MAX_DAILY_REBALANCES=150
MAX_HOURLY_REBALANCES=7
COOLDOWN_SECONDS=14400
DELTA_MISMATCH_THRESHOLD=0.03
TIME_REBALANCE_INTERVAL_MIN=720
# Mismatch mínimo para o time rebalance disparar (0 = sem gate, ex: 0.02 = 2%)
TIME_REBALANCE_MIN_MISMATCH=0.03
MIN_REBALANCE_USD=12

# Threshold adaptativo por gamma (ADAPTIVE_THRESHOLD=true para ativar)
# effectiveThreshold = DELTA_MISMATCH_THRESHOLD * (ADAPTIVE_REFERENCE_TICK_RANGE / tickRange)
# Ex: range=200 ticks, ref=1000 → threshold=0.03*(1000/200)=15% (cap: ADAPTIVE_MAX_THRESHOLD)
ADAPTIVE_THRESHOLD=true
ADAPTIVE_REFERENCE_TICK_RANGE=2040
ADAPTIVE_MAX_THRESHOLD=0.35

# Emergency rebalance: bypassa cooldown quando o mismatch é crítico
# Fecha EMERGENCY_HEDGE_RATIO do gap (0.5 = metade, 1.0 = total)
EMERGENCY_MISMATCH_THRESHOLD=0.75
EMERGENCY_HEDGE_RATIO=0.50
BLOCK_THROTTLE=50

# Hyperliquid credentials (required when DRY_RUN=false)
HL_PRIVATE_KEY=0x...
HL_WALLET_ADDRESS=0x...

# Mode
DRY_RUN=true

# Dashboard
DASHBOARD_PORT=3001

# Supabase (opcional — deixar em branco para desativar persistência)
SUPABASE_URL=
SUPABASE_KEY=
