# WebSocket URL principal (QuickNode, Alchemy, etc.)
WS_URL=wss://your-node-provider.base-mainnet.example.com/your-api-key

HTTP_RPC_URL=https://mainnet.base.org
HTTP_RPC_URL_2=https://your-node-provider.base-mainnet.example.com/your-api-key
HTTP_RPC_URL_3=https://base-rpc.publicnode.com

# PnL — saldo inicial (capturado automaticamente na ativação; só definir se precisar forçar)
INITIAL_LP_USD=
INITIAL_HL_USD=

# Hedge config
HEDGE_TOKEN=token0
HEDGE_SYMBOL=VIRTUAL-PERP

# Strategy
HEDGE_FLOOR=0.90
MIN_NOTIONAL_USD=10
MAX_NOTIONAL_USD=100000
MAX_DAILY_REBALANCES=150
MAX_HOURLY_REBALANCES=7
COOLDOWN_SECONDS=14400
TIME_REBALANCE_INTERVAL_MIN=720

# Gatilhos de rebalance por movimento de preço
# PRICE_MOVEMENT_THRESHOLD: % de variação de preço desde o último rebalance para disparar (0.05 = 5%)
# EMERGENCY_PRICE_MOVEMENT_THRESHOLD: % maior que bypassa cooldown imediatamente (0.15 = 15%)
PRICE_MOVEMENT_THRESHOLD=0.05
EMERGENCY_PRICE_MOVEMENT_THRESHOLD=0.15
BLOCK_THROTTLE=50

# Hyperliquid credentials (required when DRY_RUN=false)
HL_PRIVATE_KEY=0x...
HL_WALLET_ADDRESS=0x...
# Taxa taker da Hyperliquid (default 0.000432 = 0.0432%)
HL_TAKER_FEE=0.000432

# Mode
DRY_RUN=true

# Dashboard
DASHBOARD_PORT=3001

# Uniswap V4 PositionManager (Base mainnet)
POSITION_MANAGER_V4_ADDRESS=0x7c5f5a4bbd8fd63184577525326123b519429bdc

# Supabase (opcional — deixar em branco para desativar persistência)
SUPABASE_URL=
SUPABASE_KEY=
